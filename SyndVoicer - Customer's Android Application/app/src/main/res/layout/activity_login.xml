<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/syndlogo"/>


    <ImageView
        android:id="@+id/lgframe"
        android:layout_width="315dp"
        android:layout_height="400dp"
        android:layout_below="@id/header"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/lgframe" />

    <LinearLayout
        android:id="@+id/lglayout"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
        android:id="@+id/username"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:hint="UserName"
        android:textColorHint="#FFFFFF"
        android:ems="15"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_person"
        android:background="@drawable/editround"
        android:inputType="textEmailAddress"
        android:textColor="#ffff"
        />


    <EditText
        android:id="@+id/password"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:ems="15"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_locklogin"
        android:background="@drawable/editround"
        android:inputType="textPassword"
        android:textColor="#ffff"
        android:layout_below="@+id/username"
        />

        <Button
            android:id="@+id/login"
            android:layout_width="120dp"
            android:text="LOGIN"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password"
            android:layout_marginTop="50dp"
            android:background="@drawable/loginbutton"/>

            <TextView
                android:id="@+id/help"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login"
                android:layout_centerHorizontal="true"
                android:paddingLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="If you have any queries? Please Click here"
                android:textColor="#000000"
                android:textSize="12dp" />

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/roundlg" />


</RelativeLayout>